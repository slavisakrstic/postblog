{
  "name": "backend",
  "version": "0.0.1",
  "description": "Postblog backend service",
  "author": "Slavisa Krstic",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "webpack",
    "build:migrations": "webpack --config webpack/migrations.webpack.config.js",
    "start": "node dist/server.js",
    "start:dev": "webpack --watch",
    "start:debug": "webpack --watch --env.debug=true",
    "migrate:run": "node dist/migrate.js",
    "migrate:dev:run": "ts-node ./node_modules/typeorm/cli.js migration:run -f ./src/ormconfig.dev.ts",
    "migrate:dev:create": "ts-node ./node_modules/typeorm/cli.js migration:create -f ./src/ormconfig.dev.ts -n",
    "migrate:dev:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert -f ./src/ormconfig.dev.ts",
    "lint": "eslint src --ext ts --max-warnings 0",
    "lint:fix": "eslint src --ext ts --fix --max-warnings 0",
    "test": "jest src --setupFiles dotenv/config",
    "test:watch": "jest src --watch --setupFiles dotenv/config",
    "test:cover": "jest src --coverage --setupFiles dotenv/config",
    "test:integration": "jest --config=integration.jest.config.js --bail --forceExit --runInBand --coverage=false integration-tests"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/swagger": "^4.8.0",
    "@nestjs/typeorm": "^7.1.5",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dotenv": "^10.0.0",
    "glob": "^7.1.7",
    "nodemon-webpack-plugin": "^4.5.2",
    "path": "^0.12.7",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.34",
    "typeorm-naming-strategies": "^2.0.0",
    "webpack": "^5.38.1",
    "webpack-node-externals": "^3.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.17",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.36",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "node-docker-api": "^1.1.22",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3",
    "webpack-cli": "^4.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
